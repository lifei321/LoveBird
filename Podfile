source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '8.0'

use_frameworks!

xcodeproj 'LoveBird/LoveBird.xcodeproj'   


target 'LoveBird' do

#必须的库
pod 'JSONModel', '1.7.0'
pod 'JSONKit-NoWarning', '1.2'

pod 'MJRefresh', '3.1.12'

pod 'SDWebImage', '4.2.2'

pod 'IQKeyboardManager', '5.0.4'

pod 'TTTAttributedLabel', '1.13.4', :inhibit_warnings => true

pod 'MBProgressHUD+BWMExtension', '1.0.1'

pod 'NJKWebViewProgress', '0.2.3'

pod 'WebViewJavascriptBridge', '5.0.5'

pod 'TMCache', '2.1.0'

pod 'JLRoutes', '1.6.4'

pod 'AFNetworking', '3.1.0'

#pod 'ZCamera', '1.1.5'

pod 'INTULocationManager', '4.2.0'

pod 'YYKit', '1.0.9'

pod 'Bugly', '2.4.8'

#空页面
pod 'DZNEmptyDataSet'

#KVO监听库
pod 'ReactiveObjC', '3.0.0'

#第三方登录和分享
pod 'mob_sharesdk'
pod 'mob_sharesdk/ShareSDKPlatforms/QQ'
pod 'mob_sharesdk/ShareSDKPlatforms/SinaWeibo'

#微信sdk不带支付的命令
pod 'mob_sharesdk/ShareSDKPlatforms/WeChat'

# UI模块(非必须，需要用到ShareSDK提供的分享菜单栏和分享编辑页面需要以下1行)
pod 'mob_sharesdk/ShareSDKUI'

#个推
pod 'GTSDK', '2.1.0.0'

#检测内存泄漏
pod 'MLeaksFinder', :configurations => ['Debug']

#轮播图  滚动框 消息通知滚动条
pod 'SDCycleScrollView', '1.74'

#引导页
pod 'Onboard', '2.3.1'

#导航栏
pod 'WRNavigationBar','1.0.3'

#启动广告
pod 'XHLaunchAd', '3.8.4'



end
